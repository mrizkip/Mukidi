<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.mrizkip.mukidi.MengaturDompet">

    <ImageView
        android:id="@+id/logoMukidiSplash"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        />

    <TextView
        android:id="@+id/txtMengaturDompet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/logoMukidiSplash"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:drawableTop="@drawable/dompet"
        android:text="BUAT DOMPET BARU"
        android:textColor="@color/text"
        android:textSize="18dp"
        />


    <ImageView
        android:id="@+id/iconSaldo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/uang"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtMengaturDompet"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_nominalSaldo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txtMengaturDompet"
        android:gravity="left"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        app:hintTextAppearance="@style/EditTextWhite"
        android:layout_marginBottom="2dp">
        <EditText
            android:id="@+id/nominalSaldo"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:textColor="@color/text"
            android:hint="Saldo Awal"
            android:inputType="number"
            android:textColorHint="@color/text"
            android:backgroundTint="@color/text"
            >
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="LANJUT"
        android:id="@+id/buttonLanjut"
        android:layout_below="@+id/layout_nominalSaldo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/background"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        />

</RelativeLayout>
