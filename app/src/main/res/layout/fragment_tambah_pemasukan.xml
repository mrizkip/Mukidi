<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text"
    tools:context="com.example.mrizkip.mukidi.TambahPemasukan">

    <!-- TODO: Update blank fragment layout -->
    <RadioGroup
        android:id="@+id/radioGroupPemasukan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radioBtnGaji"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Gaji"
            android:textAlignment="center"
            android:textColor="@color/textGray"
            android:drawableTop="@drawable/gaji"
            android:drawablePadding="5dp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:checked="true"
            android:background="@drawable/custom_button_background"
            android:button="@android:color/transparent"/>
        <RadioButton
            android:id="@+id/radioBtnPinjaman"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Pinjaman"
            android:textAlignment="center"
            android:textColor="@color/textGray"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:drawableTop="@drawable/pinjaman"
            android:drawablePadding="5dp"
            android:background="@drawable/custom_button_background"
            android:button="@android:color/transparent" />
        <RadioButton
            android:id="@+id/radioBtnHadiahMasuk"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Hadiah"
            android:textAlignment="center"
            android:textColor="@color/textGray"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:drawableTop="@drawable/hadiah"
            android:drawablePadding="5dp"
            android:background="@drawable/custom_button_background"
            android:button="@android:color/transparent"/>
        <RadioButton
            android:id="@+id/radioBtnBisnis"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Bisnis"
            android:textAlignment="center"
            android:textColor="@color/textGray"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:drawableTop="@drawable/bisnis"
            android:drawablePadding="5dp"
            android:background="@drawable/custom_button_background"
            android:button="@android:color/transparent"/>
    </RadioGroup>

</RelativeLayout>
