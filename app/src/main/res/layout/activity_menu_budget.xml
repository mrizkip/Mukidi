<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MenuBudget">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarBudget"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">
        <TextView
            android:id="@+id/toolbarBudgetText"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="BUDGET"
            android:textColor="@color/text"
            android:textSize="25dp"
            >
        </TextView>
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabTambahBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_input_add"
        android:backgroundTint="@color/colorPrimary"
        android:tint="@color/text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_budget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/emptyBudget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Tidak ada Budget"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/emptyBudget2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silahkan tekan tombol Tambah Budget di bawah untuk menambahkan Aset"
        android:gravity="center"
        android:layout_marginBottom="155dp"
        android:layout_above="@+id/fabTambahBudget"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
